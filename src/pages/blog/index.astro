---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { GITHUB_REPO, SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const newPostUrl = `${GITHUB_REPO}/new/main/src/content/blog`;

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Get all unique tags
const allTags = [...new Set(posts.flatMap((post) => post.data.tags))].sort();
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			h1 {
				font-size: 1.5rem;
				color: var(--text-muted);
				margin-bottom: 1em;
			}
			.tags-filter {
				display: flex;
				gap: 0.5em;
				flex-wrap: wrap;
				margin-bottom: 2em;
			}
			.tag-link {
				background: var(--bg-secondary);
				color: var(--text-muted);
				padding: 0.25em 0.75em;
				border-radius: 9999px;
				font-size: 0.85em;
				text-decoration: none;
				border: none;
			}
			.tag-link:hover {
				color: var(--accent);
				text-decoration: none;
			}
			ul {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			li {
				margin-bottom: 0.5em;
			}
			.post-link {
				display: flex;
				justify-content: space-between;
				align-items: baseline;
				gap: 1em;
				padding: 0.75em 0;
				border-bottom: 1px solid var(--border);
				text-decoration: none;
			}
			.post-link:hover {
				background: var(--bg-secondary);
				margin: 0 -0.75em;
				padding: 0.75em;
				border-radius: 6px;
				border-bottom-color: transparent;
			}
			.title {
				color: var(--text);
				font-size: 1.1em;
			}
			.post-link:hover .title {
				color: var(--accent);
			}
			.date {
				color: var(--text-muted);
				font-size: 0.85em;
				white-space: nowrap;
			}
			.new-post {
				display: block;
				margin-top: 2em;
				padding-top: 1.5em;
				border-top: 1px solid var(--border);
				text-align: right;
				font-size: 0.8em;
			}
			.new-post a {
				color: var(--text-muted);
				opacity: 0.6;
				text-decoration: none;
			}
			.new-post a:hover {
				opacity: 1;
				color: var(--accent);
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>All Posts</h1>
			{allTags.length > 0 && (
				<div class="tags-filter">
					{allTags.map((tag) => (
						<a href={`/blog/tag/${tag}/`} class="tag-link">{tag}</a>
					))}
				</div>
			)}
			<ul>
				{posts.map((post) => (
					<li>
						<a href={`/blog/${post.id}/`} class="post-link">
							<span class="title">{post.data.title}</span>
							<span class="date">
								{post.data.pubDate.toLocaleDateString('en-us', {
									year: 'numeric',
									month: 'short',
									day: 'numeric',
								})}
							</span>
						</a>
					</li>
				))}
			</ul>
			<div class="new-post">
				<a href={newPostUrl} target="_blank" rel="noopener noreferrer">
					+ New post
				</a>
			</div>
		</main>
		<Footer />
	</body>
</html>
