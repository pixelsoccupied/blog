{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/.astro",
			"!**/*.astro",
			"!**/.claude",
			"!**/.vscode"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"recommended": true
			},
			"complexity": {
				"recommended": true,
				"noExcessiveCognitiveComplexity": "error"
			},
			"correctness": {
				"recommended": true,
				"noNodejsModules": "off",
				"noUndeclaredDependencies": "off",
				"noUnusedVariables": "error",
				"noUnusedImports": "error"
			},
			"performance": {
				"recommended": true
			},
			"security": {
				"recommended": true
			},
			"style": {
				"recommended": true,
				"useFilenamingConvention": "off",
				"noDefaultExport": "off",
				"useNamingConvention": "off",
				"useConst": "error"
			},
			"suspicious": {
				"recommended": true,
				"noConsole": "warn",
				"noDebugger": "error",
				"noExplicitAny": "error"
			},
			"nursery": {
				"noFloatingPromises": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "all"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"includes": ["src/styles/global.css"],
			"linter": {
				"rules": {
					"complexity": {
						"noImportantStyles": "off"
					}
				}
			}
		}
	]
}
